.green-button
  min-width: 200px
  height: 50px
  text-align: center
  line-height: 50px
  margin: 0 10px
  background-color: colGreen
  color: white
  font-family: 'nerissemibold', sans-serif
  font-size: 16px
  transition: background-color 0.3s ease
  border: none
  display: inline-table
  &:hover, &:active, &:focus
    background-color: #7CC900
    text-decoration: none
    color: white
